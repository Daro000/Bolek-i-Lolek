<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Bolek_i_Lolek.MainWindow"
        Title="Bolek_i_Lolek">
    
    <StackPanel>
        <StackPanel Orientation="Horizontal">
        <TextBox Watermark="Wpisz tutaj..." Width="200" HorizontalAlignment="Left" Margin="10"></TextBox>
        
        <Button Content="Dodaj"></Button>
        </StackPanel>
        
        <TextBlock HorizontalAlignment="Center">Lista z zadaniami Bloka i Lolka</TextBlock>
        
        <ListBox x:Name="ListaZadan" SelectionMode="Single" Width="400" Margin="10">g</ListBox>
        
        <Button Content="Usun" HorizontalAlignment="Center" Margin="10"></Button>
        
        <StackPanel Orientation="Horizontal">
           <ComboBox Margin=" 100 0 0 0">
                       <ComboBoxItem>Bolek</ComboBoxItem>
                       <ComboBoxItem>Lolek</ComboBoxItem>
                   </ComboBox>
                   <Image></Image> 
        </StackPanel>
        
        <RadioButton Margin=" 80 0 0 0">niski(łatwe)</RadioButton>
        <RadioButton Margin=" 80 0 0 0">normalny(zwykły)</RadioButton>
        <RadioButton Margin=" 80 0 0 0">wysoki(trudne)</RadioButton>
        
        <CheckBox Margin=" 180 0 0 0">Na dworze</CheckBox>
        <CheckBox Margin=" 180 0 0 0">Potrzebny sprzęt</CheckBox>
        <CheckBox Margin=" 180 0 0 0">Z udziałem kolegow</CheckBox>
        <CheckBox Margin=" 180 0 0 0">Po szkole</CheckBox>
        <CheckBox Margin=" 180 0 0 0">Z dorosłym</CheckBox>
        
        <CalendarDatePicker x:Name="EgzamCalendar" Margin="10"></CalendarDatePicker>
        
    </StackPanel>
</Window>
